#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ‘· Styling, testing, and building Solidarity..."

# Run pretty-quick to format code
echo "ğŸ¨ Formatting your code..."
pnpx pretty-quick --staged || (
  echo "ğŸš¨ Code formatting failed. Please fix formatting errors and try again."
  exit 1
)

# Run lint to lint code
echo "ğŸ” Linting client-side code..."
(cd client && pnpm run lint) || (
  echo "ğŸš¨ Client linting failed. Please fix linting errors and try again."
  exit 1
)

# Run lint-
echo "ğŸ” Linting server-side code..."
(cd server && pnpm run lint) || (
  echo "ğŸš¨ Server linting failed. Please fix linting errors and try again."
  exit 1
)

# Build client
echo "ğŸ—ï¸ Building client..."
(cd client && pnpm run build) || (
  echo "ğŸš¨ Client build failed. Please fix build errors and try again."
  exit 1
)

# All checks passed
echo "âœ… All checks passed. Committing code..."